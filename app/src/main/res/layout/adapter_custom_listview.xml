<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/ListViewAvatarSize"
            android:layout_height="@dimen/ListViewAvatarSize"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible" >

            <com.aduhack.whatareyoucravingforagain.common.CircleImageView
                android:id="@+id/lv_custom_imgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/lv_custom_mainTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@string/fontStyleMain"
                android:text="@string/app_name"
                android:textColor="#000"
                android:textSize="@dimen/ListViewMainTextSize"
                android:layout_marginBottom="1dp"/>




            <TextView
                android:id="@+id/lv_custom_subTextView"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:fontFamily="@string/fontStyleSub"
                android:text=""
                android:textColor="@color/SubTextColor"
                android:singleLine="false"
                android:textSize="@dimen/ListViewSubDetailTextSize" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="right|top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lv_custom_shopTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/fontStyleSub"
                android:text="Goldilocks"
                android:textColor="@color/SubTextColor"
                android:textSize="@dimen/ListViewSubTextSize"
                android:layout_gravity="right"
                android:gravity="top|right"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/lv_custom_priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@string/fontStyleSub"
                android:text="Php 200.00"
                android:textColor="@color/SubTextColor"
                android:textSize="@dimen/ListViewSubTextSize"
                android:layout_gravity="right"
                android:gravity="top|right"
                android:padding="13dp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>